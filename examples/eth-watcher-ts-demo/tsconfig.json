{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "removeComments": true,
        "target": "ES2017",
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts",
        "__tests__/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}
