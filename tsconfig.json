{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "pretty": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "removeComments": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*.ts",
        "__tests__/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
